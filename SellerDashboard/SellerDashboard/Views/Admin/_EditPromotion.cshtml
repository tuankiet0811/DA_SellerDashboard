@model SellerDashboard.Models.Promotion

<div class="bg-white dark:bg-[#1a2c23] rounded-lg shadow-sm border border-[#e7f3ec] dark:border-[#2a4034] overflow-hidden max-w-2xl mx-auto">
    <div class="p-6 border-b border-[#e7f3ec] dark:border-[#2a4034] flex justify-between items-center">
        <h2 class="text-xl font-bold text-text-main dark:text-white">Sửa khuyến mãi</h2>
        <button onclick="loadPromotionList()" class="text-text-muted hover:text-text-main">
            <span class="material-symbols-outlined">close</span>
        </button>
    </div>
    <div class="p-6">
        <form asp-action="EditPromotion" id="editPromotionForm" onsubmit="submitEditPromotion(event, @Model.Id)">
            <input type="hidden" asp-for="Id" />
            <div class="space-y-4">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-text-main dark:text-gray-200">Tên khuyến mãi</label>
                    <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-text-main dark:text-white shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" />
                    <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-text-main dark:text-gray-200">Mô tả</label>
                    <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-text-main dark:text-white shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label asp-for="DiscountPercent" class="block text-sm font-medium text-text-main dark:text-gray-200">Phần trăm giảm giá (%)</label>
                    <input asp-for="DiscountPercent" type="number" min="0" max="100" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-text-main dark:text-white shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" />
                    <span asp-validation-for="DiscountPercent" class="text-red-500 text-xs"></span>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="StartDate" class="block text-sm font-medium text-text-main dark:text-gray-200">Ngày bắt đầu</label>
                        <input asp-for="StartDate" type="datetime-local" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-text-main dark:text-white shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" />
                        <span asp-validation-for="StartDate" class="text-red-500 text-xs"></span>
                    </div>
                    <div>
                        <label asp-for="EndDate" class="block text-sm font-medium text-text-main dark:text-gray-200">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="datetime-local" class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-text-main dark:text-white shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" />
                        <span asp-validation-for="EndDate" class="text-red-500 text-xs"></span>
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <input asp-for="IsActive" type="checkbox" class="rounded border-gray-300 text-primary focus:ring-primary" />
                    <label asp-for="IsActive" class="text-sm font-medium text-text-main dark:text-gray-200">Kích hoạt</label>
                </div>
            </div>
            <div class="mt-6 flex justify-end gap-3">
                <button type="button" onclick="loadPromotionList()" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-sm font-medium text-text-muted hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">Hủy</button>
                <button type="submit" class="px-4 py-2 bg-primary hover:bg-primary-dark text-white rounded-lg text-sm font-bold shadow-lg shadow-primary/25 transition-all">Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>