@model SellerDashboard.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="mb-8">
        <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
            <a asp-action="Index" class="hover:text-primary transition-colors">My Orders</a>
            <span class="material-symbols-outlined text-base">chevron_right</span>
            <span>Order #@Model.Id</span>
        </div>
        <h1 class="text-3xl font-bold tracking-tight text-[#0d1b13] dark:text-white">Order Details</h1>
        <div class="mt-4 flex items-center gap-3">
            @if (Model.Status == "Pending" || Model.Status == "Processing")
            {
                <form asp-action="Cancel" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-red-200 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20">
                        <span class="material-symbols-outlined">cancel</span>
                        Huỷ đơn hàng
                    </button>
                </form>
            }
            @if (Model.Status == "Completed")
            {
                <a asp-action="Return" asp-route-id="@Model.Id" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg border border-gray-200 text-text-main hover:bg-gray-50 dark:hover:bg-[#23352a]">
                    <span class="material-symbols-outlined">keyboard_return</span>
                    Yêu cầu trả hàng
                </a>
            }
        </div>
    </div>

    @if (Model.Status == "Returned" || Model.PaymentStatus == "Refunded")
    {
        <div class="mb-8 bg-white dark:bg-[#1a2e22] rounded-2xl shadow-sm border border-gray-100 dark:border-[#2a4032] p-6">
            <div class="flex items-center gap-3">
                <div class="size-8 rounded-full bg-green-100 text-green-600 flex items-center justify-center">
                    <span class="material-symbols-outlined">check_circle</span>
                </div>
                <div>
                    <div class="font-bold text-[#0d1b13] dark:text-white">Đã trả hàng thành công</div>
                    <div class="text-sm text-gray-600 dark:text-gray-300">Đơn hàng đã được xử lý trả hàng và hoàn tiền</div>
                    @if (!string.IsNullOrEmpty(Model.TransactionId))
                    {
                        <div class="text-xs text-gray-500 mt-1">Return Reason: <span class="font-medium">@Model.TransactionId</span></div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="mb-8 bg-white dark:bg-[#1a2e22] rounded-2xl shadow-sm border border-gray-100 dark:border-[#2a4032] p-6">
            @{ var stages = new[] { "Pending", "Processing", "Shipped", "Delivered", "Completed" }; var current = Array.IndexOf(stages, Model.Status); if (current < 0) { current = 0; } }
            <div class="flex items-center justify-between">
                @for (int i = 0; i < stages.Length; i++)
                {
                    var active = i <= current;
                    <div class="flex-1 flex items-center">
                        <div class="flex flex-col items-center text-center">
                            <div class="size-8 rounded-full flex items-center justify-center @(active ? "bg-primary text-white" : "bg-gray-200 dark:bg-gray-700 text-gray-500")">
                                @(active ? "✓" : (i + 1).ToString())
                            </div>
                            <div class="mt-2 text-xs font-medium @(active ? "text-text-main dark:text-white" : "text-gray-500 dark:text-gray-400")">@stages[i]</div>
                        </div>
                        @if (i < stages.Length - 1)
                        {
                            <div class="h-0.5 flex-1 mx-4 @(active ? "bg-primary" : "bg-gray-200 dark:bg-gray-700")"></div>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Order Items -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white dark:bg-[#1a2e22] rounded-2xl shadow-sm border border-gray-100 dark:border-[#2a4032] overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-100 dark:border-[#2a4032] flex items-center justify-between">
                    <h2 class="font-bold text-[#0d1b13] dark:text-white">Items Ordered</h2>
                    <span class="text-sm text-gray-500 dark:text-gray-400">@Model.OrderDetails.Sum(x => x.Quantity) items</span>
                </div>
                <div class="divide-y divide-gray-100 dark:divide-[#2a4032]">
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <div class="p-6 flex gap-4">
                            <div class="size-20 rounded-lg bg-gray-100 dark:bg-gray-800 overflow-hidden shrink-0">
                                <img src="@(string.IsNullOrEmpty(detail.Product?.ImageUrl) ? "https://via.placeholder.com/150" : detail.Product.ImageUrl)" alt="@detail.ProductName" class="w-full h-full object-cover" />
                            </div>
                            <div class="flex-1">
                                <h3 class="font-medium text-[#0d1b13] dark:text-white">@detail.ProductName</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Quantity: @detail.Quantity</p>
                            </div>
                            <div class="text-right">
                                <p class="font-medium text-[#0d1b13] dark:text-white">@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", detail.Price)</p>
                                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Total: @string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", detail.Price * detail.Quantity)</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="space-y-6">
            <div class="bg-white dark:bg-[#1a2e22] rounded-2xl shadow-sm border border-gray-100 dark:border-[#2a4032] p-6">
                <h2 class="font-bold text-[#0d1b13] dark:text-white mb-4">Order Summary</h2>
                <div class="space-y-3 text-sm">
                    <div class="flex justify-between text-gray-600 dark:text-gray-300">
                        <span>Subtotal</span>
                        <span>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", Model.TotalAmount)</span>
                    </div>
                    <div class="flex justify-between text-gray-600 dark:text-gray-300">
                        <span>Shipping</span>
                        <span>Free</span>
                    </div>
                    <div class="border-t border-gray-100 dark:border-[#2a4032] pt-3 flex justify-between font-bold text-[#0d1b13] dark:text-white text-base">
                        <span>Total</span>
                        <span>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", Model.TotalAmount)</span>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-[#1a2e22] rounded-2xl shadow-sm border border-gray-100 dark:border-[#2a4032] p-6">
                <h2 class="font-bold text-[#0d1b13] dark:text-white mb-4">Delivery Information</h2>
                <div class="space-y-4 text-sm text-gray-600 dark:text-gray-300">
                    <div>
                        <p class="font-medium text-[#0d1b13] dark:text-white mb-1">Shipping Address</p>
                        <p>@Model.FullName</p>
                        <p>@Model.SpecificAddress</p>
                        <p>@Model.Ward, @Model.District</p>
                        <p>@Model.Province</p>
                        <p class="mt-1">@Model.Phone</p>
                    </div>
                    <div>
                        <p class="font-medium text-[#0d1b13] dark:text-white mb-1">Payment Method</p>
                        <p>@Model.PaymentMethod</p>
                        <p class="text-xs mt-1">Status: <span class="font-medium">@Model.PaymentStatus</span></p>
                        @if (Model.Status == "ReturnRequested" || Model.Status == "Returned")
                        {
                            <p class="text-xs mt-2">Return Reason: <span class="font-medium">@Model.TransactionId</span></p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
